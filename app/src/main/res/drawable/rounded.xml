<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- The normal state of the button -->
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="#2c65ba" />
            <stroke android:color="#050d3d" android:width="2dp" />
            <!-- make the button corners rounded-->
            <corners android:radius="20dp"/>

        </shape>
    </item>

    <!-- The state when the button is being pressed or clicked. -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#003780"/>
            <!--apply a border around button-->
            <stroke android:color="#081441" android:width="1dp" />
            <!-- make the button corners rounded-->
            <corners android:radius="20dp"/>
            <size
                android:width="120dp"
                android:height="120dp">

            </size>
        </shape>
    </item>
</selector>